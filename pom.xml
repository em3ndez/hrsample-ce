  <build>
    <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
    <testSourceDirectory>${basedir}/src/test/java</testSourceDirectory>
    <outputDirectory>${basedir}/target/classes</outputDirectory>
    <testOutputDirectory>${basedir}/target/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <filtering>true</filtering>
        <excludes>
          <exclude>**/images/**/*.*</exclude>
          <exclude>**/*.jasper</exclude>
          <exclude>**/*.ftl</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <filtering>false</filtering>
        <includes>
          <include>**/images/**/*.*</include>
          <include>**/*.jasper</include>
          <include>**/*.ftl</include>
        </includes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>${basedir}/src/test/resources</directory>
        <filtering>false</filtering>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*Tests.java</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>beandoc</id>
            <phase>pre-site</phase>
            <configuration>
              <tasks>
                <taskdef
                  name="beandoc"
                  classname="org.springframework.beandoc.client.AntTask" />
                <taskdef resource="net/sf/antcontrib/antlib.xml" />
                <if>
                  <equals
                    arg1="${project.artifactId}"
                    arg2="hrsample" />
                  <then>
                    <mkdir dir="${project.reporting.outputDirectory}/beandocs" />
                    <mkdir
                      dir="${project.reporting.outputDirectory}/beandocs/tmp" />
                    <copy
                      todir="${project.reporting.outputDirectory}/beandocs/tmp"
                      flatten="true">
                      <fileset
                        dir="${basedir}/core/src/main/resources">
                        <include name="**/hrsample-*.xml" />
                      </fileset>
                    </copy>
                    <beandoc
                      outputDir="${project.reporting.outputDirectory}/beandocs"
                      beandocProps="${basedir}/jspresso-app-hrsample-beandoc.properties">
                      <fileset
                        dir="${project.reporting.outputDirectory}/beandocs/tmp">
                        <include name="**/*.xml" />
                      </fileset>
                    </beandoc>
                    <delete
                      dir="${project.reporting.outputDirectory}/beandocs/tmp" />
                  </then>
                </if>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>ant-contrib</groupId>
            <artifactId>ant-contrib</artifactId>
            <version>1.0b2</version>
          </dependency>
          <dependency>
            <groupId>org.springframework.beandoc</groupId>
            <artifactId>spring-beandoc</artifactId>
            <version>0.8.1</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <inherited>false</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/dist-bin.xml</descriptor>
            <descriptor>src/main/assembly/dist-src.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>
     </plugins>
