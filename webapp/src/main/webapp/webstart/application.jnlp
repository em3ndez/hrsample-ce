<?xml version="1.0" encoding="ISO-8859-1"?>
<jnlp spec="1.0+" codebase="$$context/webstart" href="application.jnlp">

  <information>
    <title>Jspresso HR Sample</title>
    <vendor>Jspresso</vendor>
    <description>Jspresso HR Sample Application</description>
    <homepage href="http://www.jspresso.org"/>
    <icon href="$$context/webstart/jspresso.jpg" width="192" height="96"/>
    <icon kind="splash" href="$$context/webstart/jspresso.jpg" width="192" height="96"/>
  </information>

  <update check="always" policy="always"/>

  <resources>
    <java version="1.5+" href="http://java.sun.com/products/autodl/j2se"/>
    <jar href="../lib/jspresso-app-launch-ulc.jar" main="true"/>
    <jar href="../lib/jspresso-app-launch-core.jar"/>
    <jar href="../lib/jspresso-swing-components.jar"/>
    <jar href="../lib/ulc-base-client.jar"/>
    <jar href="../lib/ulc-base-trusted.jar"/>
    <jar href="../lib/ulc-jnlp-client.jar"/>
    <jar href="../lib/nachocalendar.jar"/>
    <jar href="../lib/substance.jar"/>
    <property name="swing.defaultlaf" value="org.jvnet.substance.SubstanceLookAndFeel"/>
    <property name="sun.awt.noerasebackground" value="true"/>
    <extension name="untrusted jars" href="$$context/webstart/application-untrusted.jnlp"/>
  </resources>

  <security>
    <all-permissions/>
  </security>

  <application-desc main-class="org.jspresso.framework.application.launch.ulc.jnlp.UlcJnlpLauncher">
    <argument>-splash</argument>
    <argument>$$context/webstart/jspresso.jpg</argument>
    <argument>$$context/hrsample-ulc</argument>
    <argument>60</argument>
    <argument>WARNING</argument>
  </application-desc>

</jnlp>
