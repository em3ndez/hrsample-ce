<?xml version="1.0" encoding="UTF-8"?>
<project
  xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.jspresso</groupId>
    <artifactId>hrsample</artifactId>
    <version>1.0</version>
  </parent>
  <groupId>org.jspresso</groupId>
  <artifactId>hrsample-webapp</artifactId>
  <packaging>jar</packaging>
  <version>1.0</version>
  <name>Jspresso HR Sample - Webapp</name>
  <dependencies>
    <dependency>
      <groupId>org.jspresso</groupId>
      <artifactId>hrsample-core</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jspresso</groupId>
      <artifactId>jspresso-ulc-application</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jspresso</groupId>
      <artifactId>jspresso-security</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jspresso</groupId>
      <artifactId>jspresso-ulc-components-server</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jspresso</groupId>
      <artifactId>jspresso-ulc-components-shared</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jspresso</groupId>
      <artifactId>jspresso-app-launch</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jspresso</groupId>
      <artifactId>jspresso-ulc-components-client</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jspresso</groupId>
      <artifactId>jspresso-ulc-components-shared</artifactId>
    </dependency>
    <dependency>
      <groupId>ulc</groupId>
      <artifactId>ulc-base-server</artifactId>
    </dependency>
    <dependency>
      <groupId>ulc</groupId>
      <artifactId>ulc-deployment-key</artifactId>
    </dependency>
    <dependency>
      <groupId>ulc</groupId>
      <artifactId>ulc-servlet-server</artifactId>
    </dependency>
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-pool</groupId>
      <artifactId>commons-pool</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-dbcp</groupId>
      <artifactId>commons-dbcp</artifactId>
    </dependency>
    <dependency>
      <groupId>jnlp-servlet</groupId>
      <artifactId>jnlp-servlet</artifactId>
    </dependency>
    <dependency>
      <groupId>hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
    </dependency>
    <dependency>
      <groupId>nachocalendar</groupId>
      <artifactId>nachocalendar</artifactId>
    </dependency>
    <dependency>
      <groupId>jedit</groupId>
      <artifactId>jedit-syntax</artifactId>
    </dependency>
    <dependency>
      <groupId>ulc</groupId>
      <artifactId>ulc-jnlp-client</artifactId>
    </dependency>
    <dependency>
      <groupId>ulc</groupId>
      <artifactId>ulc-base-client</artifactId>
    </dependency>
    <dependency>
      <groupId>ulc</groupId>
      <artifactId>ulc-base-trusted</artifactId>
    </dependency>
    <dependency>
      <groupId>ulc</groupId>
      <artifactId>ulc-servlet-client</artifactId>
    </dependency>
    <dependency>
      <groupId>org.jvnet</groupId>
      <artifactId>substance</artifactId>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>${basedir}/src/main/java</sourceDirectory>
    <testSourceDirectory>${basedir}/src/test/java</testSourceDirectory>
    <outputDirectory>${basedir}/target/classes</outputDirectory>
    <testOutputDirectory>${basedir}/target/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>${basedir}/src/main/resources</directory>
        <filtering>false</filtering>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>${basedir}/src/test/resources</directory>
        <filtering>false</filtering>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*Tests.java</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
       <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>install</phase>
            <goals>
              <goal>directory</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptors>
            <descriptor>
              ${basedir}/src/main/assembly/development.xml
            </descriptor>
            <!--
              <descriptor>${basedir}/src/main/assembly/preproduction.xml</descriptor>
              <descriptor>${basedir}/src/main/assembly/production.xml</descriptor>
            -->
          </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>package</id>
            <phase>install</phase>
            <configuration>
              <tasks>
                <mkdir dir="${project.build.directory}/development" />
                <zip
                  destfile="${project.build.directory}/development/${project.artifactId}.war"
                  basedir="${project.build.directory}/${project.artifactId}-${project.version}-development.dir" />
                <!--
                  <mkdir dir="${project.build.directory}/preproduction" />
                  <zip destfile="${project.build.directory}/preproduction/${project.artifactId}.war"
                  basedir="${project.build.directory}/${project.artifactId}-${project.version}-preproduction.dir" />
                  <mkdir dir="${project.build.directory}/production" />
                  <zip destfile="${project.build.directory}/production/${project.artifactId}.war"
                  basedir="${project.build.directory}/${project.artifactId}-${project.version}-production.dir" />
                -->
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
      </plugin>
    </plugins>
  </reporting>
</project>
