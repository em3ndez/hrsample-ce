<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
  default-lazy-init="true">

  <bean
      id="applicationFrontController"
      parent="frontController"
      scope="prototype">
    <property
        name="iconImageURL"
        value="classpath:org/jspresso/hrsample/images/people-48x48.png" />
    <property
        name="loginContextName"
        value="hrsample" />
    <property
        name="forcedStartingLocale"
        value="en" />
    <property
        name="actionMap"
        ref="controllerActionMap" />
    <property
        name="frameWidth"
        value="1200" />
    <property
        name="frameHeight"
        value="800" />
    <property
        name="workspaces">
      <list>
        <ref bean="organization.workspace"/>
        <ref bean="employees.workspace"/>
        <ref bean="masterdata.workspace"/>
      </list>
    </property>
    <property
        name="name"
        value="hrsample.name" />
  </bean>

  <bean
      id="City.module.view"
      class="org.jspresso.framework.view.descriptor.mobile.MobileComponentViewDescriptor" >
    <property
        name="modelDescriptor"
        ref="City" />
  </bean>

  <bean
      id="Employee.table.view"
      class="org.jspresso.framework.view.descriptor.mobile.MobileListViewDescriptor"/>

  <bean
      id="Employee.module.view"
      class="org.jspresso.framework.view.descriptor.mobile.MobileComponentViewDescriptor">
    <property
        name="modelDescriptor"
        ref="Employee" />
  </bean>

  <bean
      id="Company.module.view"
      class="org.jspresso.framework.view.descriptor.mobile.MobileCompositePageViewDescriptor">
    <property
        name="modelDescriptor"
        ref="Company" />
    <property name="pageSections">
      <list>
        <bean class="org.jspresso.framework.view.descriptor.mobile.MobileComponentViewDescriptor"/>
        <bean class="org.jspresso.framework.view.descriptor.mobile.MobileNavPageViewDescriptor">
          <property name="selectionView">
            <bean class="org.jspresso.framework.view.descriptor.mobile.MobileListViewDescriptor">
              <property name="modelDescriptor" ref="Company-departments" />
              <property name="actionMap">
                <bean class="org.jspresso.framework.view.action.ActionMap">
                  <property name="actionLists">
                    <bean class="org.jspresso.framework.view.action.ActionList">
                      <property name="actions">
                        <ref bean="addToMasterFrontAction" />
                      </property>
                    </bean>
                  </property>
                </bean>
              </property>
            </bean>
          </property>
          <property name="nextPage">
            <bean class="org.jspresso.framework.view.descriptor.mobile.MobileCompositePageViewDescriptor">
              <property name="pageSections">
                <list>
                  <bean class="org.jspresso.framework.view.descriptor.mobile.MobileComponentViewDescriptor"/>
                  <bean class="org.jspresso.framework.view.descriptor.mobile.MobileNavPageViewDescriptor">
                    <property name="selectionView">
                      <bean class="org.jspresso.framework.view.descriptor.mobile.MobileListViewDescriptor">
                        <property name="modelDescriptor" ref="Department-teams" />
                      </bean>
                    </property>
                    <property name="nextPage">
                      <bean class="org.jspresso.framework.view.descriptor.mobile.MobileCompositePageViewDescriptor">
                        <property name="pageSections">
                          <list>
                            <bean class="org.jspresso.framework.view.descriptor.mobile.MobileComponentViewDescriptor"/>
                            <bean class="org.jspresso.framework.view.descriptor.mobile.MobileNavPageViewDescriptor">
                              <property name="selectionView">
                                <bean class="org.jspresso.framework.view.descriptor.mobile.MobileListViewDescriptor">
                                  <property name="modelDescriptor" ref="Team-teamMembers" />
                                </bean>
                              </property>
                              <property name="nextPage">
                                <bean class="org.jspresso.framework.view.descriptor.mobile.MobileCompositePageViewDescriptor">
                                  <property name="pageSections">
                                    <list>
                                      <bean class="org.jspresso.framework.view.descriptor.mobile.MobileComponentViewDescriptor" />
                                    </list>
                                  </property>
                                </bean>
                              </property>
                            </bean>
                          </list>
                        </property>
                      </bean>
                    </property>
                  </bean>
                </list>
              </property>
            </bean>
          </property>
        </bean>
        <bean class="org.jspresso.framework.view.descriptor.mobile.MobileNavPageViewDescriptor">
          <property name="selectionView">
            <bean class="org.jspresso.framework.view.descriptor.mobile.MobileListViewDescriptor">
              <property name="modelDescriptor" ref="Company-employees" />
            </bean>
          </property>
          <property name="nextPage">
            <bean class="org.jspresso.framework.view.descriptor.mobile.MobileCompositePageViewDescriptor">
              <property name="pageSections">
                <list>
                  <bean class="org.jspresso.framework.view.descriptor.mobile.MobileComponentViewDescriptor"/>
                </list>
              </property>
            </bean>
          </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>
