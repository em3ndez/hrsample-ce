<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="org.jspresso.framework.model.persistence.hibernate.property.EntityPropertyAccessor">
  <class persister="org.jspresso.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" dynamic-update="true" abstract="true" table="ORGANIZATIONAL_UNIT" dynamic-insert="true" name="org.jspresso.hrsample.model.OrganizationalUnit">
    <id name="id" type="string" column="ID" length="36">
      <generator class="assigned"/>
    </id>
    <version unsaved-value="null" name="version" column="VERSION"/>
    <property name="ouId">
      <column name="OU_ID" length="6" not-null="true"/>
    </property>
    <component name="contact"><tuplizer entity-mode="pojo" class="org.jspresso.framework.model.persistence.hibernate.entity.tuplizer.ProxyPojoComponentTuplizer" />
      <property name="address">
        <column name="CONTACT_ADDRESS" length="256"/>
      </property>
      <many-to-one cascade="none" name="city">
        <column name="CONTACT_CITY_ID"/>
      </many-to-one>
      <property name="phone">
        <column name="CONTACT_PHONE" length="32"/>
      </property>
      <property name="email">
        <column name="CONTACT_EMAIL" length="128"/>
      </property>
    </component>
    <one-to-one name="manager" property-ref="managedOu" cascade="persist,merge,save-update,refresh,evict,replicate"/>
    <property name="name">
      <column name="NAME" length="64" not-null="true"/>
    </property>
    <property name="createTimestamp" type="timestamp">
      <column name="CREATE_TIMESTAMP"/>
    </property>
    <property name="lastUpdateTimestamp" type="timestamp">
      <column name="LAST_UPDATE_TIMESTAMP"/>
    </property>
    <joined-subclass name="org.jspresso.hrsample.model.Department" dynamic-insert="true" persister="org.jspresso.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" dynamic-update="true" table="DEPARTMENT">
      <key column="ID"/>
      <many-to-one cascade="persist,merge,save-update" name="company">
        <column name="COMPANY_ID" not-null="true"/>
      </many-to-one>
      <set inverse="true" cascade="persist,merge,save-update,refresh,evict,replicate,delete" name="teams">
        <key not-null="true" column="DEPARTMENT_ID"/>
        <one-to-many class="org.jspresso.hrsample.model.Team"/>
      </set>
    </joined-subclass>
    <joined-subclass name="org.jspresso.hrsample.model.Team" dynamic-insert="true" persister="org.jspresso.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" dynamic-update="true" table="TEAM">
      <key column="ID"/>
      <many-to-one cascade="persist,merge,save-update" name="department">
        <column name="DEPARTMENT_ID" not-null="true"/>
      </many-to-one>
      <set cascade="persist,merge,save-update,refresh,evict,replicate" table="TEAM_TEAM_MEMBERS" name="teamMembers">
        <key column="TEAM_ID"/>
        <many-to-many class="org.jspresso.hrsample.model.Employee" column="EMPLOYEE_ID"/>
      </set>
    </joined-subclass>
  </class>
</hibernate-mapping>
