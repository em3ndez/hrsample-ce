<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="org.jspresso.framework.model.persistence.hibernate.property.EntityPropertyAccessor">
  <class persister="org.jspresso.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" dynamic-update="true" table="EMPLOYEE" dynamic-insert="true" name="org.jspresso.hrsample.model.Employee">
    <id name="id" type="string" column="ID" length="36">
      <generator class="assigned"/>
    </id>
    <version unsaved-value="null" name="version" column="VERSION"/>
    <property name="firstName">
      <column name="FIRST_NAME" length="32"/>
    </property>
    <property name="ssn">
      <column name="SSN" length="10" unique-key="EMP_SSN_UNQ"/>
    </property>
    <property name="birthDate" type="date">
      <column name="BIRTH_DATE"/>
    </property>
    <property name="hireDate" type="date">
      <column name="HIRE_DATE"/>
    </property>
    <property name="gender">
      <column name="GENDER" length="1" not-null="true"/>
    </property>
    <component name="contact"><tuplizer entity-mode="pojo" class="org.jspresso.framework.model.persistence.hibernate.entity.tuplizer.ProxyPojoComponentTuplizer" />
      <property name="address">
        <column name="CONTACT_ADDRESS" length="256"/>
      </property>
      <many-to-one cascade="none" name="city">
        <column name="CONTACT_CITY_ID"/>
      </many-to-one>
      <property name="phone">
        <column name="CONTACT_PHONE" length="32"/>
      </property>
      <property name="email">
        <column name="CONTACT_EMAIL" length="128"/>
      </property>
    </component>
    <list cascade="persist,merge,save-update,refresh,evict,replicate,delete" name="events">
      <key column="EVENTS_EMPLOYEE_ID"/>
      <list-index column="EVENTS_SEQ"/>
      <one-to-many class="org.jspresso.hrsample.model.Event"/>
    </list>
    <set inverse="true" cascade="none" table="TEAM_TEAM_MEMBERS" name="teams">
      <key column="EMPLOYEE_ID"/>
      <many-to-many class="org.jspresso.hrsample.model.Team" column="TEAM_ID"/>
    </set>
    <many-to-one cascade="persist,merge,save-update" name="company">
      <column name="COMPANY_ID" not-null="true"/>
    </many-to-one>
    <many-to-one unique="true" cascade="persist,merge,save-update,refresh,evict,replicate" name="managedOu">
      <column name="MANAGED_OU_ID"/>
    </many-to-one>
    <property name="name">
      <column name="NAME" length="64" not-null="true"/>
    </property>
    <property name="createTimestamp" type="timestamp">
      <column name="CREATE_TIMESTAMP"/>
    </property>
    <property name="lastUpdateTimestamp" type="timestamp">
      <column name="LAST_UPDATE_TIMESTAMP"/>
    </property>
  </class>
</hibernate-mapping>
