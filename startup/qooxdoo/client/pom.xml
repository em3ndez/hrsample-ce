<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jspresso.hrsample</groupId>
    <artifactId>hrsample</artifactId>
    <version>3.5.0</version>
  </parent>

  <artifactId>hrsample-startup-qooxdoo-client</artifactId>
  <packaging>pom</packaging>
  <name>Jspresso HR Sample - Startup - Qooxdoo - Client</name>

  <dependencies>
    <dependency>
      <groupId>org.qooxdoo</groupId>
      <artifactId>qooxdoo-sdk</artifactId>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.jspresso.framework</groupId>
      <artifactId>jspresso-qooxdoo-client</artifactId>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack-jspresso-qooxdoo</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/jspresso-qooxdoo</outputDirectory>
              <includeArtifactIds>jspresso-qooxdoo-client</includeArtifactIds>
            </configuration>
          </execution>
          <execution>
            <id>unpack-qooxdoo-sdk</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <includeArtifactIds>qooxdoo-sdk</includeArtifactIds>
              <outputDirectory>${project.build.directory}/qooxdoo-sdk</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-qooxdoo-contribs</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}</outputDirectory>
              <includeGroupIds>org.qooxdoo</includeGroupIds>
              <excludeArtifactIds>qooxdoo-sdk</excludeArtifactIds>
              <useSubDirectoryPerArtifact>true</useSubDirectoryPerArtifact>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>compile-qooxdoo</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <phase>compile</phase>
          </execution>
        </executions>
        <configuration>
          <executable>python</executable>
          <workingDirectory>src/main/py</workingDirectory>
          <arguments>
            <argument>${project.build.directory}/qooxdoo-sdk/tool/bin/generator.py</argument>
            <argument>source-all,build</argument>
          </arguments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>web-debug</id>
            <goals>
              <goal>run</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <property name="web-debug.dir" value="${project.build.directory}/web-debug" />
                <property name="js.source.dir" value="${basedir}/src/main/source" />
                <property name="html.source.dir" value="${basedir}/src/main/html" />
                <mkdir dir="" />
                <copy todir="${web-debug.dir}">
                  <fileset dir="${js.source.dir}">
                    <include name="**/*.js" />
                  </fileset>
                  <fileset dir="${html.source.dir}">
                    <include name="**/*.html" />
                  </fileset>
                </copy>
                <replace dir="${web-debug.dir}" token="../../../../target" value="file:///${project.build.directory}">
                  <include name="**/*.js" />
                </replace>
                <replace dir="${web-debug.dir}" token="../../" value="file:///${basedir}/src/main/">
                  <include name="**/*.js" />
                </replace>
                <replace dir="${web-debug.dir}" token="\" value="/">
                  <include name="**/*.js" />
                </replace>
                <replace dir="${web-debug.dir}" token="//(" value="\/(">
                  <include name="**/*.js" />
                </replace>
                <delete dir="${js.source.dir}" />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-qooxdoo-web-resources</id>
            <goals>
              <goal>single</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <descriptors>
                <descriptor>${basedir}/src/main/assembly/web-resources.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
          <execution>
            <id>attach-qooxdoo-sources</id>
            <goals>
              <goal>single</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <descriptors>
                <descriptor>${basedir}/src/main/assembly/sources.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>