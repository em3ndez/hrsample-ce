<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="com.d2s.framework.model.persistence.hibernate.property.EntityPropertyAccessor">
  <class dynamic-update="true" table="EMPLOYEE" persister="com.d2s.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" name="com.d2s.framework.hrsample.model.Employee" dynamic-insert="true">
    <id type="string" column="ID" length="36" name="id">
      <generator class="assigned"/>
    </id>
    <version column="VERSION" unsaved-value="null" name="version"/>
    <property name="firstName">
      <column name="FIRST_NAME" length="32"/>
    </property>
    <property name="ssn">
      <column name="SSN" unique-key="EMP_SSN_UNQ" length="10"/>
    </property>
    <property name="birthDate" type="date">
      <column name="BIRTH_DATE"/>
    </property>
    <property name="hireDate" type="date">
      <column name="HIRE_DATE"/>
    </property>
    <property name="gender">
      <column name="GENDER" not-null="true" length="1"/>
    </property>
    <component name="contact"><tuplizer entity-mode="pojo" class="com.d2s.framework.model.persistence.hibernate.entity.tuplizer.ProxyPojoComponentTuplizer" />
      <property name="address">
        <column name="CONTACT_ADDRESS" length="256"/>
      </property>
      <many-to-one cascade="persist,merge,save-update,refresh,evict,replicate" name="city">
        <column name="CONTACT_CITY_ID"/>
      </many-to-one>
      <property name="phone">
        <column name="CONTACT_PHONE" length="32"/>
      </property>
      <property name="email">
        <column name="CONTACT_EMAIL" length="128"/>
      </property>
    </component>
    <list cascade="persist,merge,save-update,refresh,evict,replicate,delete" name="events">
      <key column="EVENTS_PARENT_ID"/>
      <list-index column="EVENTS_SEQ"/>
      <one-to-many class="com.d2s.framework.hrsample.model.Event"/>
    </list>
    <many-to-one cascade="persist,merge,save-update" name="company">
      <column name="COMPANY_ID" not-null="true"/>
    </many-to-one>
    <many-to-one cascade="persist,merge,save-update,refresh,evict,replicate" name="managedOu">
      <column name="MANAGED_OU_ID" unique="true"/>
    </many-to-one>
    <property name="createTimestamp" type="timestamp">
      <column name="CREATE_TIMESTAMP"/>
    </property>
    <property name="lastUpdateTimestamp" type="timestamp">
      <column name="LAST_UPDATE_TIMESTAMP"/>
    </property>
    <property name="name">
      <column name="NAME" not-null="true" length="64"/>
    </property>
  </class>
</hibernate-mapping>
