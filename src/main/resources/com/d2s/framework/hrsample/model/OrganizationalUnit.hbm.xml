<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="com.d2s.framework.model.persistence.hibernate.property.EntityPropertyAccessor">
  <class abstract="true" dynamic-update="true" table="ORGANIZATIONAL_UNIT" persister="com.d2s.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" name="com.d2s.framework.hrsample.model.OrganizationalUnit" dynamic-insert="true">
    <id type="string" column="ID" length="36" name="id">
      <generator class="assigned"/>
    </id>
    <version column="VERSION" unsaved-value="null" name="version"/>
    <property name="ouId">
      <column name="OU_ID" not-null="true" length="6"/>
    </property>
    <component name="contact"><tuplizer entity-mode="pojo" class="com.d2s.framework.model.persistence.hibernate.entity.tuplizer.ProxyPojoComponentTuplizer" />
      <property name="address">
        <column name="CONTACT_ADDRESS" length="256"/>
      </property>
      <many-to-one cascade="persist,merge,save-update,refresh,evict,replicate" name="city">
        <column name="CONTACT_CITY_ID"/>
      </many-to-one>
      <property name="phone">
        <column name="CONTACT_PHONE" length="32"/>
      </property>
      <property name="email">
        <column name="CONTACT_EMAIL" length="128"/>
      </property>
    </component>
    <one-to-one name="manager" cascade="persist,merge,save-update,refresh,evict,replicate" property-ref="managedOu"/>
    <property name="createTimestamp" type="timestamp">
      <column name="CREATE_TIMESTAMP"/>
    </property>
    <property name="lastUpdateTimestamp" type="timestamp">
      <column name="LAST_UPDATE_TIMESTAMP"/>
    </property>
    <property name="name">
      <column name="NAME" not-null="true" length="64"/>
    </property>
    <joined-subclass name="com.d2s.framework.hrsample.model.Department" dynamic-insert="true" persister="com.d2s.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" table="DEPARTMENT" dynamic-update="true">
      <key column="ID"/>
      <many-to-one cascade="persist,merge,save-update" name="company">
        <column name="COMPANY_ID" not-null="true"/>
      </many-to-one>
      <set inverse="true" cascade="persist,merge,save-update,refresh,evict,replicate,delete" name="teams">
        <key column="DEPARTMENT_ID"/>
        <one-to-many class="com.d2s.framework.hrsample.model.Team"/>
      </set>
    </joined-subclass>
    <joined-subclass name="com.d2s.framework.hrsample.model.Team" dynamic-insert="true" persister="com.d2s.framework.model.persistence.hibernate.entity.persister.EntityProxyJoinedSubclassEntityPersister" table="TEAM" dynamic-update="true">
      <key column="ID"/>
      <many-to-one cascade="persist,merge,save-update" name="department">
        <column name="DEPARTMENT_ID" not-null="true"/>
      </many-to-one>
    </joined-subclass>
  </class>
</hibernate-mapping>
